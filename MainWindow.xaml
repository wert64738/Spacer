<Window x:Class="Spacer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spacer" Height="600" Width="1000"
        WindowStyle="None" ResizeMode="CanResize"
        Background="White"
        SizeChanged="Window_SizeChanged"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid Grid.Row="0" Background="LightGray" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="2">
                <TextBox x:Name="RootFolderTextBox" Width="400" Margin="2" IsReadOnly="True"/>
                <Button Content="Scan Folder" Click="ScanFolderButton_Click" Margin="2" Padding="5,2"/>
                <Button Content="Zoom Out" Click="ZoomOutButton_Click" Margin="2" Padding="5,2"/>
                <TextBlock x:Name="ProcessingIndicator" Text="Processing..." 
                           Visibility="Collapsed" Margin="5,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
            <!-- Small Exit Button in the right column -->
            <Button Content="X" Click="ExitButton_Click" Grid.Column="1" Margin="2" Padding="3,1"
                    FontSize="10" Width="25" Height="25"/>
        </Grid>

        <Canvas x:Name="MainCanvas" Grid.Row="1" Background="WhiteSmoke" Margin="2"/>
    </Grid>
</Window>
